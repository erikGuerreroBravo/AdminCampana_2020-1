            $('#metaRed').text(Math.trunc(progres) + "%");
            $('#progresoRed').css("width", progres + "%");


            //Multinivel
            if (response[1][0] < priorityMultinivel[0]) {
                $('#boxRedMultinivel').addClass("boxRed");
